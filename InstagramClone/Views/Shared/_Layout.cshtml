<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" />
    <link href="~/CSS_Style/style.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />

    <link rel="shortcut icon" href="~/Images/icon.png" />
</head>
<body>
    <!-- navigation -->
    <nav class="navbar">
        <div class="nav-wrapper">
            <img class="brand-img" src="~/Images/logo.png" />
            
            
            <div class="nav-items">

                <a href="/Account/MyProfile" style="color: black;"> <i class="icon fas fa-home"> </i></a>
                <a href="/Account/Search" style="color: black;"> <i class="icon fas fa-search"> </i></a>
                <a href="/Images/addimages" style="color: black;"> <i class="icon fas fa-plus"> </i></a>
                <a href="/Friends/viewFriendRequests" style="color: black;"> <i class="icon fas fa-solid fa-users"></i></a>
                <a href="/Account/Logout" style="color: black;"> <i class="fas fa-sign-out-alt"> </i></a>

                <!--<button class="profile-btn profile-edit-btn"> @Html.ActionLink("Photos", "addus", "Images", new { id = Session["id"] }, new { id = Session["id"], @class = "edit" }) </button>-->

            </div>
        </div>
    </nav>

   
    <div class="container body-content mt-5">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
