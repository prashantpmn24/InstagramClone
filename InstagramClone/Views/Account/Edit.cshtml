@model InstagramClone.Models.User

<!-- section -->
<section class="main">
    <div class="wrapper">
        <div class="left-col">
            <h3>Update Profile</h3>

            @using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="mb-3">
                    @if (@Model.profileimage != null)
                    {
                        <img src="@Url.Content(Model.profileimage)"
                             class="edit-profile-image"
                             alt="" />

                    }
                    @if (@Model.profileimage == null)
                    {
                        <img src="~/Images/noprofile.jpg" class="edit-profile-image" />

                    }


                    <input type="file" name="imageFile" class="form-control" />

                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <!--<p class="form-control">Email</p>-->
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "ErrorMessage" })
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">First Name</label>
                    @Html.EditorFor(model => model.First_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "ErrorMessage" })
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Last Name</label>
                    @Html.EditorFor(model => model.Last_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Last_Name, "", new { @class = "ErrorMessage" })
                </div>
                <div class="mb-3">
                    <label for="username" class="form-label">Phone Number</label>
                    @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.phone, "", new { @class = "ErrorMessage" })
                </div>

                <div class="mb-3">
                    <label for="username" class="form-label">Password</label>
                    @Html.EditorFor(model => model.Passwords, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Passwords, "", new { @class = "ErrorMessage" })
                </div>

                <div class="mb-3">
                    <label for="bio" class="form-label">Bio</label>
                    <textarea name="bio" id="bio" class="form-control" cols="30" rows="3">@Session["bio"]</textarea>
                </div>
                <div class="mb-3">

                    <input name="update_profile_btn" id="update_profile_btn" class="update-profile-btn" value="update" type="submit" />
                </div>
            }
        </div>
        <div class="right-col">
            <!--Profile-Card-->

            <div class="profile-card">
                <div class="profile-pic">
                    @if (@Model.profileimage != null)
                    {
                        <img src="@Url.Content(Model.profileimage)"
                             alt="" />

                    }
                    @if (@Model.profileimage == null)
                    {
                        <img src="~/Images/noprofile.jpg" />

                    }

                </div>
                <div>
                    <p class="username"> <a href="/User/MyProfile" style="text-decoration: none;color: black;">@Html.DisplayFor(model => model.First_Name) @Html.DisplayFor(model => model.Last_Name)</a></p>
                </div>
                <button class="logout-btn"><a href="/User/Logout"></a>Logout</button>
            </div>

            <!--Suggestion-Card-->

            <p class="suggestion-text">Suggestions For you</p>

            <div class="suggestion-card">
                <div class="suggestion-pic">
                    <img src="~/Images/Akram.jpg" alt="" />
                </div>
                <div>
                    <p class="username"> <a href="https://www.instagram.com/akramhosny" style="text-decoration: none;color: black;">Akram Hosny</a></p>
                </div>
                <button class="follow-btn">Follow</button>
            </div>
        </div>
    </div>
</section>

<!-- script -->

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"></script>
